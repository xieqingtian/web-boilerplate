{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "lib": ["dom", "es2015", "es2016", "es2017"],
        "baseUrl": ".",
        "paths": {
            "@/api": ["src/api"],
            "@/api/*": ["src/api/*"],
            "@/components/*": ["src/components/*"],
            "@/utils/*": ["src/utils/*"],
            "@/hooks": ["src/hooks"],
            "@/store": ["src/store"],
            "@/store/*": ["src/store/*"]
        },
        "jsx": "react",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "importHelpers": true,
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": ["src"]
}
