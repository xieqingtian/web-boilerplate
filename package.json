{
    "name": "web-boilerplate",
    "version": "1.0.0",
    "repository": "https://github.com/xieqingtian/web-boilerplate.git",
    "author": "xieqingtian <1255699673@qq.com>",
    "license": "MIT",
    "scripts": {
        "start": "qt dev",
        "build": "qt build",
        "lint": "tsc --noEmit && eslint src/**/*.{ts,tsx} --quiet --fix",
        "format": "prettier --config ./.prettierrc.js --write ./src/**/*.{ts,tsx,scss}"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.2.5",
        "antd": "^4.0.3",
        "axios": "^0.19.2",
        "lodash": "^4.17.15",
        "react": "^16.13.0",
        "react-dom": "^16.13.0",
        "react-hot-loader": "^4.12.19",
        "react-redux": "^7.2.0"
    },
    "devDependencies": {
        "@hot-loader/react-dom": "^16.12.0",
        "@types/lodash": "^4.14.149",
        "@types/react": "^16.9.23",
        "@types/react-dom": "^16.9.5",
        "@types/react-redux": "^7.1.7",
        "@typescript-eslint/eslint-plugin": "^2.23.0",
        "@typescript-eslint/parser": "^2.23.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^2.5.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "prettier": "^1.19.1",
        "typescript": "^3.8.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && tsc --noEmit"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,scss}": [
            "prettier --config ./.prettierrc.js --write",
            "eslint src/**/*.{ts,tsx}",
            "git add"
        ]
    }
}
