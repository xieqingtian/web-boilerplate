{
    "name": "web-boilerplate",
    "version": "1.0.0",
    "repository": "https://github.com/xieqingtian/web-boilerplate.git",
    "author": "xieqingtian <1255699673@qq.com>",
    "license": "MIT",
    "keywords": [
        "react",
        "typescript"
    ],
    "description": "web boilerplate",
    "scripts": {
        "start": "qt dev",
        "build": "qt build",
        "lint:ts": "eslint \"src/**/*.{ts,tsx}\" --quiet --fix",
        "lint:style": "stylelint --fix \"src/**/*.{ts,tsx,scss}\"",
        "format": "prettier --config \".prettierrc.js\" --write \"src/**/*.{ts,tsx,scss}\"",
        "tsc": "tsc --noEmit",
        "clean": "rimraf node_modules/.cache/hard-source/"
    },
    "dependencies": {
        "@ant-design/icons": "^4.2.2",
        "@reduxjs/toolkit": "^1.4.0",
        "antd": "^4.5.3",
        "axios": "^0.19.2",
        "lodash": "^4.17.19",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-hot-loader": "^4.12.21",
        "react-redux": "^7.2.1",
        "styled-components": "^5.1.1"
    },
    "devDependencies": {
        "@hot-loader/react-dom": "^16.13.0",
        "@types/lodash": "^4.14.159",
        "@types/react": "^16.9.46",
        "@types/react-dom": "^16.9.8",
        "@types/react-redux": "^7.1.9",
        "@types/styled-components": "^5.1.2",
        "@umijs/fabric": "^2.2.2",
        "eslint": "^7.6.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "stylelint": "^13.6.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && tsc --noEmit"
        }
    },
    "lint-staged": {
        "src/**/*.{js,tsx,ts,scss,json}": [
            "prettier --config \".prettierrc.js\" --write"
        ],
        "src/**/*.{ts,tsx,scss}": "stylelint",
        "src/**/*.{ts,tsx}": [
            "eslint \"src/**/*.{ts,tsx}\""
        ]
    }
}
