{
    "name": "web-boilerplate",
    "version": "1.0.0",
    "repository": "https://github.com/xieqingtian/web-boilerplate.git",
    "author": "xieqingtian <1255699673@qq.com>",
    "license": "MIT",
    "keywords": [
        "react",
        "typescript"
    ],
    "description": "web boilerplate",
    "scripts": {
        "start": "qt dev",
        "build": "qt build",
        "lint:ts": "eslint \"src/**/*.{ts,tsx}\" --quiet --fix",
        "lint:style": "stylelint --fix \"src/**/*.scss\" --syntax scss",
        "format": "prettier --config \".prettierrc.js\" --write \"src/**/*.{ts,tsx,scss}\"",
        "tsc": "tsc --noEmit"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.3.2",
        "antd": "^4.1.0",
        "axios": "^0.19.2",
        "lodash": "^4.17.15",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-hot-loader": "^4.12.20",
        "react-redux": "^7.2.0"
    },
    "devDependencies": {
        "@hot-loader/react-dom": "^16.13.0",
        "@types/lodash": "^4.14.149",
        "@types/react": "^16.9.32",
        "@types/react-dom": "^16.9.6",
        "@types/react-redux": "^7.1.7",
        "@umijs/fabric": "^2.0.7",
        "eslint": "^6.8.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.1.1",
        "prettier": "^2.0.2",
        "stylelint": "^13.2.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && tsc --noEmit"
        }
    },
    "lint-staged": {
        "src/**/*.{js,tsx,ts,scss,json}": [
            "prettier --config \".prettierrc.js\" --write"
        ],
        "src/**/*.scss": "stylelint --syntax scss",
        "src/**/*.{ts,tsx}": [
            "eslint \"src/**/*.{ts,tsx}\""
        ]
    }
}
